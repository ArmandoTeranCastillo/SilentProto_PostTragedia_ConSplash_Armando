<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".PrincipalActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Silent Assistant"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:textSize="30sp"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:srcCompat="@drawable/robotmorado" />

    <Switch
        android:id="@+id/switchDND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="10dp"
        android:text="Activar DND"
        android:textColor="@color/teal_700"
        android:textSize="20dp"
        android:textStyle="bold"
        android:thumbTint="@color/purple_500"
        android:trackTint="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLugares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="10dp"
        android:text="Lugares"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMisc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="10dp"
        android:text="MiscelÃ¡neos"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20dp" />
</LinearLayout>